@model List<Slider>
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Slider" asp-action="Create" style="color:white;font-size:25px" class="mb-5 btn btn-success">Create Slide</a>
<table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            SubTitle
                          </th>
                          <th>
                            Setting
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Slider item in Model)
                       {
                           <tr>
                          <td>
                            @item.Id
                          </td>
                          <td>
                            <img src="~/assets/img/slide/@item.Image"  alt="...">
                          </td>
                          <td>
                            @item.Title
                          </td>
                          <td>
                            @item.SubTitle
                          </td>

                          <td>
                            <div class="d-flex">
                                <div class="Details">
                                    <a asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-details"></i></a>
                                </div>
                                <div class="Edit">
                                    <a asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                </div>
                                <div class="Delete">
                                    <a asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                </div>
                            </div>
                          </td>
                        </tr>
                       }
                        
                      </tbody>
                    </table>